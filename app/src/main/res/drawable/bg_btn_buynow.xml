<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F1E5C0" /> <!-- Màu khi nhấn -->
            <corners android:radius="8dp" /> <!-- Các góc được bo tròn -->
        </shape>
    </item>
    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFC107" /> <!-- Màu mặc định -->
            <corners android:radius="8dp" /> <!-- Các góc được bo tròn -->
        </shape>
    </item>
</selector>
